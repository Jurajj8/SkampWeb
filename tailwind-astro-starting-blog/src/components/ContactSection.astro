---
let { title = "Kontaktujte nás", subtitle = "Máte otázky alebo sa chcete objednať? Neváhajte nás kontaktovať!", buttonText = "Napísať správu", buttonLink = "/#kontakt" } = Astro.props;
---

<section class="py-20 bg-gradient-to-b from-black to-gray-900 text-white scroll-mt-20" id="contact">
  <div class="container mx-auto flex flex-col lg:flex-row items-center lg:items-start px-6 lg:px-20">
    
    <!-- Ľavá strana: Kontakt text -->
    <div class="w-full lg:w-1/2 lg:pr-12 text-center lg:text-left">
      <h2 class="text-4xl font-extrabold mb-4">
        <span class="text-purple-600">{title}</span>
      </h2>
      <p class="text-gray-300 text-lg mb-6">{subtitle}</p>

      <!-- Informácie -->
      <div class="space-y-4">
        <h1 class="text-xl text-purple-600 font-bold">Daniel Pollak | Skamp</h1>
        <p class="flex items-center text-lg text-gray-400">
          📍 <span class="ml-3">Skalité 1007, 023 14 Skalité</span>
        </p>
        <p class="flex items-center text-lg text-gray-400">
          📞 <span class="ml-3">+421 908 581 126</span>
        </p>
        <p class="flex items-center text-lg text-gray-400">
          ✉️ <span class="ml-3">info@danielpollak.sk</span>
        </p>
      </div>

      <!-- <a href={buttonLink} class="mt-6 inline-block bg-red-500 text-white font-bold py-3 px-6 rounded-lg shadow-md hover:bg-red-600 transition">
        {buttonText}
      </a>-->
    </div> 

    <!-- Pravá strana: Mapa -->
    <div class="w-full lg:w-1/2 mt-10 lg:mt-0">
      <iframe class="w-full h-72 rounded-lg shadow-lg" 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d770.4018055052035!2d18.89487431173679!3d49.497493025676654!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47143f14faacc81f%3A0xbe7e26c018a79678!2sSkamp%20Barbershop!5e0!3m2!1scs!2ssk!4v1739829424287!5m2!1scs!2ssk"
        allowfullscreen="" loading="lazy"></iframe>
    </div>

  </div>
</section>